@using BusinessLogicLayer.Abstraction.Services.VotingCommands.Dtos
@model BusinessLogicLayer.Abstraction.Services.VotingCommands.Dtos.CreateVotingDto;

<div asp-validation-summary="All" class="validation text-danger"></div>
<div class="form-group">
    <label asp-for="Name">Title</label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description">Description</label>
    <textarea asp-for="Description" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="StartDate">Start date</label>
    <input asp-for="StartDate" type="date" class="form-control"/>
</div>

<div class="form-group">
    <label asp-for="EndDate">End date</label>
    <input asp-for="EndDate" type="date" class="form-control"/>
</div>

<div class="form-group">
    <small>
        <h9 class="card-subtitle mb-2 text-muted">Voting options</h9>
    </small>
    <div class="voting-options">
        <div class="row">

            @foreach (int i in Enumerable.Range(0, CreateVotingDto.VotingOptionsCount))
            {
                <div class="col-sm-7 mt-2">
                    <input asp-for="VotingOptions[i].Name" class="form-control"/>
                </div>
            }
            <div class="col-sm-8 mt-2">
                <input type="button" value="+ Add option" class="addPick btn btn-outline-secondary">
                    <div>
                    <div class="new-input col-sm-7 mt-2 d-inline-block"></div>
                    </div>
            </div>
            
        </div>
    </div>
    <div class="mt-2">
    <input type="submit"  value="Save" class="btn btn-success" />
</div>

</div>