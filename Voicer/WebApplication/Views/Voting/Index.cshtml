@model IEnumerable<BusinessLogicLayer.Abstraction.Services.VotingCommands.Dtos.GetAllVotingDto>;
@{
    ViewData["Title"] = "Voting Page";
}
<div class="row">
    
    <div class="col-sm">
        <h1>List voting</h1>
    </div>
    <div class="col-sm">
        <a asp-controller="Voting" asp-action="Add" class="btn btn-success">+ New voting</a>
    </div>
</div>
<div class="row">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <button class="btn btn-outline-secondary" type="button" id="button-addon1">Search</button>
      </div>
      <input type="text" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
    </div>
</div>
<table class="table table-inverse">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>StartDate</th>
        <th>EndDate</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var voting in Model)
    {
        <tr>
            <th scope="row">1</th>
            <td>@voting.Name</td>
            <td>@voting.Description</td>
            <td>@voting.StartDate</td>
            <td>@voting.EndDate</td>
        </tr>
    }
    </tbody>
</table>
<div>
    
    <div class="row">
        <div class="col-sm">
            <h7>Upcoming voting</h7>
        </div>
        <div class="col-sm">
            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                <option selected>Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    This is some text within a card body.
                </div>
                <div class="col-sm">
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                </div>
                
            </div>
        </div>
    </div>
</div>
 <br>
<br>
<br>
<div>
    <h7>Active voting</h7>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    This is some text within a card body.
                </div>
                <div class="col-sm">
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                </div>
                            
            </div>
            
        </div>
    </div>
</div>
 <br>
<br>
<br>
<div>
    <h7>Closed voting</h7>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    This is some text within a card body.
                </div>
                <div class="col-sm">
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                </div>
                            
            </div>
            
        </div>
    </div>
</div>